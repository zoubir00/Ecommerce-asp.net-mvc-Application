@inject UserManager<ApplicationUser> UserManager;

@if (User.Identity.IsAuthenticated)
{
    @*User profile*@
    <div class="dropdown">
        <div class="btn-group">
            <button type="button" class="btn btn-outline-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-badge"></i> Hello @UserManager.GetUserName(User)
            </button>
            <ul class="dropdown-menu" aria-labelledby="profile-btn">
                <li>
                    <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                        <i class="bi bi-collection"></i> Orders
                    </a>ix
                </li>
                @if (User.IsInRole("Admin"))
                {
                                 <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Users">
                            <i class="bg-dark bi bi-person"></i> Users
                    </a>
                </li>
                } 
            </ul>
        </div>
    </div>

    <span style="padding:5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-left"></i>  Log out
        </button>
    </form>
}
else
{
    <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
        <i class="bi bi-person-lock"></i> Log in
    </a>
     <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-lines-fill"></i> Register
     </a>
}

